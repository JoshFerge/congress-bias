extends layout

block content
    div(ng-controller="mainCtrl" class="container-fluid")
        div(class="row test")
            div(class="col-md-4 leftside")
                button(class="left adb"  ng-click="advance('Democratic')") Democrat
                div(id="indicator") correct
            div(class="col-md-4 ")
                p(class="name") {{senatorInfo[currentIndex].name}}
                img(width="300px" ng-src="/images/senator-mugs/{{senatorInfo[currentIndex].formattedName}}.jpeg")
                button(class="done" id="Done") I'm Done!
            div(class="col-md-4 rightside")
                button(class="right adb" ng-click="advance('Republican')") Republican
                div(id="rightindicator") correct




